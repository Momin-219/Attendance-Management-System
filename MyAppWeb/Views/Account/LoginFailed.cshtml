@{
    ViewData["Title"] = "Login Failed";
    
    //ViewData["ShowNavbar"] = true; // Hide the navbar for this view
    ViewBag.HideLoginButton = true;
}

@*<h2>Login Failed</h2>

<p>Your login attempt was unsuccessful. Please try again.</p>
