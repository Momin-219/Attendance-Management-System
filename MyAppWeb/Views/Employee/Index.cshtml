@model List<MyAppWeb.Models.Employee>

@{
    ViewData["Title"] = "Employees";
    ViewBag.HideLoginButton = true;
}

<h2>Employees</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmpID</td>
                <td>@employee.Name</td>
                <td>@employee.Role</td>
            </tr>
        }
    </tbody>
</table>

<!-- Back button -->
<div class="mt-3">
    <button onclick="window.history.back();" class="btn btn-secondary">Back</button>
</div>
