@model IEnumerable<MyAppWeb.ViewModels.SheetViewModel>


@{
    ViewBag.HideLoginButton = true;
}

<h2>Sheets</h2>
<table class="table">
    <thead>
        <tr>
            <th>Emp ID</th>
            <th>Name</th>
            <th>Date</th>
            @*<th>Time</th>*@
            <th>Time-In</th>  
            <th>Time-Out</th>
            @*<th>Work Code</th>*@
            <th>Attendance State</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sheet in Model)
        {
            <tr>
                <td>@sheet.EmpID</td>
                <td>@sheet.Name</td>
                <td>@sheet.Date</td>
                @*<td>@sheet.Time</td>*@
                <td>@sheet.TimeIn</td>
                <td>@sheet.TimeOut</td>
                @*<td>@sheet.WorkCode</td>*@
                @if (@sheet.AttendanceState == true)
                {
                    <td>Check-Out</td>
                }
                else
                {
                    <td>Check-In</td>
                }

            </tr>
        }
    </tbody>
</table>

<!-- Navigation to details page -->
<div class="mt-3">
    <a href="@Url.Action("Details", "Sheet")" class="btn btn-primary">Details</a>
</div>

<!-- Back button -->
<div class="mt-3">
    <button onclick="window.history.back();" class="btn btn-secondary">Back</button>
</div>
